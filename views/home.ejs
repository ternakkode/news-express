<%- include('header') %>
    <style>
        .row {
            margin-bottom: 100px;
        }

        .carousel {
            margin-bottom: 4rem;
        }

        .carousel-caption {
            bottom: 3rem;
            z-index: 10;
        }

        .carousel-item {
            height: 32rem;
        }

        .carousel-indicators li {
            width: 10px;
            height: 10px;
            border-radius: 100%;
        }

        .judulcarousel {
            background-color: black;
            display: inline;
        }

        .textcarousel {
            background-color: black;
        }

        .blog-post {
            margin-bottom: 4rem;
        }

        .blog-post-title {
            margin-bottom: .25rem;
            font-size: 2.5rem;
        }

        .blog-post-meta {
            margin-bottom: 1.25rem;
            color: #727272;
        }

        p.post {
            text-align: justify;
        }

        .imgpost {
            height: 250px;
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            margin-bottom: 1rem;
        }
    </style>

    <body>
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
                <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active" style="background-image: url('<%= news[0].image %>');">
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <h1 class="judulcarousel">
                                <%= news[0].title %>
                            </h1>
                            <p></p>
                            <p><span class="textcarousel">
                                    <%= news[0].sliced_content %>
                                </span></p>
                        </div>
                    </div>
                </div>

                <div class="carousel-item" style="background-image: url('<%= news[1].image %>');">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1 class="judulcarousel">
                                <%= news[1].title %>
                            </h1>
                            <p></p>
                            <p><span class="textcarousel">
                                    <%= news[1].sliced_content %>
                                </span></p>
                        </div>
                    </div>
                </div>

                <div class="carousel-item" style="background-image: url('<%= news[2].image %>');">
                    <div class="container">
                        <div class="carousel-caption text-end">
                            <h1 class="judulcarousel">
                                <%= news[2].title %>
                            </h1>
                            <p></p>
                            <p><span class="textcarousel">
                                    <%= news[2].sliced_content %>
                                </span></p>
                        </div>
                    </div>
                </div>
            </div>

            <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h3 class="pb-4 mb-4 border-bottom">
                        Berita Hari Ini
                    </h3>
                    <% news.forEach(article=> { %>
                        <article class="blog-post">
                            <h3 class="blog-post-title">
                                <%= article.title %>
                            </h3>
                            <hr>
                            <div class="imgpost" style="background-image: url('<%= article.image %>');">
                            </div>
                            <p class="post">
                                <%= article.content %>
                            </p>
                            <a href="/news/:<%= article.id %> " class="btn btn-primary">Read More</a>
                        </article>
                        <% }) %>
                </div>

                <div class="col-md-4">
                    <div class="p-4 mb-3 bg-primary rounded">
                        <h4 style="color: white;">Jumlah Pengunjung</h4>
                        <p style="color: white;"><%= visitor %> </p>
                    </div>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
            crossorigin="anonymous"></script>
    </body>
    <%- include('footer') %>